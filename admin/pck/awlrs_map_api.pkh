                                ,feature_table                nm_themes_all.nth_feature_table%TYPE
                                ,feature_pk_column            nm_themes_all.nth_feature_pk_column%TYPE);
  TYPE theme_types_tab IS TABLE OF theme_types_rec INDEX BY BINARY_INTEGER;
