  TYPE themes_rec IS RECORD(nth_theme_id              nm_themes_all.nth_theme_id%TYPE
                           ,name                      VARCHAR2(32)
                           ,trimmed_name              VARCHAR2(32)
                           ,min_scale                 VARCHAR2(100)
                           ,max_scale                 VARCHAR2(100)
